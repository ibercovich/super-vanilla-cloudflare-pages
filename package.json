{
	"name": "vanilla",
	"version": "0.0.0",
	"author": "Ivan Bercovich",
	"description": "## a simple cms for cloudflare pages",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "node build.js",
		"deploy": "node build.js --production",
		"reloader": "browser-sync start --config bs-config.cjs",
		"dev": "SALT_TOKEN=SALT_TOKEN_STRING nodemon"
	},
	"nodemonConfig": {
		"watch": [
			"functions_"
		],
		"ext": "js , css, html, json",
		"ignore": [
			"*.gen.*"
		],
		"exec": "node build.js && wrangler pages dev --binding SALT_TOKEN=SALT_TOKEN_STRING"
	},
	"devDependencies": {
		"esbuild": "^0.25.4",
		"nodemon": "^3.1.10",
		"prettier": "^3.5.3",
		"wrangler": "^4.15.2"
	},
	"dependencies": {
		"mustache": "^4.2.0",
		"url-pattern": "^1.0.3"
	}
}
